<Window
    x:Class="Force.Halo.Checkpoints.Linux.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Force.Halo.Checkpoints.Linux.ViewModels"
    Title="Force Halo Checkpoints"
    Width="675"
    Height="500"
    CanResize="False"
    x:DataType="vm:MainWindowViewModel"
    Background="#FF2D2B2B"
    Icon="/Assets/icon.png"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button
            Name="ForceCheckpointButton"
            Grid.Row="1"
            Margin="20"
            Content="Force Checkpoint"
            Foreground="White"
            Click="ForceCheckpointButton_OnClick">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="#FF464646" />
                    <Setter Property="BorderBrush" Value="#FF1E699B" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="TextElement.Foreground" Value="White" />
                </Style>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="Gray" />
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#FFCECECE" />
                </Style>
                <Style Selector="Button:disabled">
                    <Setter Property="Background" Value="#FF858585" />
                    <Setter Property="BorderBrush" Value="#FF858585" />
                    <Setter Property="TextElement.Foreground" Value="#FFA5A5A5" />
                </Style>
            </Button.Styles>
        </Button>
        
        <Button
            Name="HaloCEButton"
            Grid.Row="2"
            Margin="20"
            Content="Halo CE"
            Foreground="White"
            Click="HaloCEButton_OnClick">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="#FF464646" />
                    <Setter Property="BorderBrush" Value="#FF1E699B" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="TextElement.Foreground" Value="White" />
                </Style>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="Gray" />
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#FFCECECE" />
                </Style>
                <Style Selector="Button:disabled">
                    <Setter Property="Background" Value="#FF858585" />
                    <Setter Property="BorderBrush" Value="#FF858585" />
                    <Setter Property="TextElement.Foreground" Value="#FFA5A5A5" />
                </Style>
            </Button.Styles>
        </Button>
        <Button
            Name="HaloCEMCCButton"
            Grid.Row="3"
            Margin="20"
            Content="Halo CE MCC"
            Foreground="White"
            Click="HaloCEMCCButton_OnClick">
            <Button.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="#FF464646" />
                    <Setter Property="BorderBrush" Value="#FF1E699B" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="TextElement.Foreground" Value="White" />
                </Style>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="Gray" />
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="#FFCECECE" />
                </Style>
                <Style Selector="Button:disabled">
                    <Setter Property="Background" Value="#FF858585" />
                    <Setter Property="BorderBrush" Value="#FF858585" />
                    <Setter Property="TextElement.Foreground" Value="#FFA5A5A5" />
                </Style>
            </Button.Styles>
        </Button>
    </Grid>
</Window>
